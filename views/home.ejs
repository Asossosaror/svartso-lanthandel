                    <div class="hidden md:flex navigation-manual absolute justify-center gap-7 self-end justify-self-center pb-6 w-96">
                        <div class="manual-btn checked" data-carousel-index="1"></div>
                        <div class="manual-btn" data-carousel-index="2"></div>
