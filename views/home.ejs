<%- include('partials/head') %>
    <main>
        <section class="flex flex-col justify-center lg:h-96 xl:h-30r">
            <h1 class="text-4xl font-semibold sm:text-6xl xl:text-7xl text-slate-950 text-center xl:p-6 xl:font-bold">Välkommen till en riktig lanthandel!</h1>
        </section>
        <section>
            <div>
                <div id="hero-img-1-home" class="sm:rounded-2xl"></div>
            </div>
        </section>
        <section class="flex flex-col items-center">
